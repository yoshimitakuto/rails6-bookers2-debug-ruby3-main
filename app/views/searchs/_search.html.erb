<% if user_signed_in? %>
 <div class="search_form text-center">
   <%= form_with url: search_path, local: true, method: :get do |f| %>
    <%= f.text_field :word %>
    <%= f.select :range, options_for_select([['User'],['Book']]) %>
    <%= f.select :search, options_for_select([["完全一致","perfect_match"],["前方一致","forward_match"],["後方一致","backward"],["部分一致","partial_match"]]) %>
    <%= f.submit "検索" %>
   <% end %>
 </div>
<% end %>